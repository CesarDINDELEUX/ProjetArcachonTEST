<UserControl x:Class="ModernUINavigationApp1.Pages.AjoutVoilier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" Height="423.761" Width="540.525" Background="White">
    <Grid Style="{StaticResource ContentRoot}">

        <TextBox x:Name="TextBoxSerie" Height="23" Width="196" Margin="196,99,116.5,255" TextChanged="TextBoxSerie_TextChanged"/>

        <Label x:Name="LabelSerieVoilier" Content="Numéro de série :" Margin="40,99,356.5,261"/>

        <Label x:Name="LabelNomVoilier" Content="Nom du voilier :" Margin="40,130,377.5,227"/>
        <TextBox x:Name="TextBoxNomVoilier" Margin="196,130,116.5,227" TextChanged="TextBoxNomVoilier_TextChanged"/>
        <Label x:Name="LabelTypeDeVoilier" Content="Classe du voilier :" Margin="40,158,339.5,201"/>
        <ComboBox x:Name="ComboBoxChoixDeVoilier" Margin="196,158,181.5,196" SelectionChanged="ComboBoxChoixDeVoilier_SelectionChanged" DisplayMemberPath="Nom"/>
        <Button x:Name="ButtonValider" Content="Valider" Margin="230,278,181.5,76" Click="ButtonValider_Click"/>
    </Grid>
</UserControl>
