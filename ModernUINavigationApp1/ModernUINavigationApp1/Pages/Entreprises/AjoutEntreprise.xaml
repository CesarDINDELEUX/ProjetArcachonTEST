        <ScrollViewer Margin="0,0,-15,-23.5">
            <StackPanel MinWidth="200">
                <TextBlock Style="{StaticResource Heading2}" ><Run Text="Ajout / Edition d'entrepris"/><Run Text="e sp"/><Run Text="onsor"/></TextBlock>
