        <Label x:Name="LabelMail" Content="Mail :" Margin="152,302,421.5,207.5"/>
        <Label x:Name="label" Content="Edition d'une entreprise :" Margin="182,71,303.5,442.5"/>
        <TextBox x:Name="TextBoxMail" Margin="294,302,136.5,206.5" TextChanged="TextBoxMail_TextChanged"/>
        <Label x:Name="LabelContact" Content="Contact :" Margin="153,358,421.5,147.5"/>
        <TextBox x:Name="TextBoxContact" Margin="294,358,136.5,150.5" TextChanged="TextBoxContact_TextChanged"/>
        <Button x:Name="ButtonValider" Content="Valider" Margin="239,425,246.5,75.5" Click="ButtonValider_Click"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="338,71,0,0">

        </ComboBox>

    </Grid>
</UserControl>
